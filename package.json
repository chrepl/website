{
  "name": "@chrepl/website",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "repository": "https://github.com/chrepl/website",
  "author": "chrepl <chrepl@chrepl.me>",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write **.ts{,x} **.js{,on} **.yml",
    "format:check": "prettier --check **.ts{,x} **.js{,on} **.yml",
    "lint": "xo",
    "lint:fix": "yarn lint --fix"
  },
  "dependencies": {
    "next": "9.5.3",
    "next-seo": "^4.7.3",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@testing-library/react": "^11.0.4",
    "@types/node": "^14.11.1",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-config-xo-typescript": "^0.33.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": ">=10",
    "prettier": "^2.1.2",
    "react-test-renderer": "^16.13.1",
    "sinon": "^9.0.3",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3",
    "xo": "^0.33.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts{,x},css,md}": "yarn lint"
  }
}
